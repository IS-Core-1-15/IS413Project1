<div class="container-fluid bg-light">

    <div class="row justify-content-center">
        <h2>Stephen Covey's Time Management Matrix</h2>
    </div>

    <div class="row">

        <div class="col-2"></div>

        <div class="col-5">
            <h5>Urgent</h5>
        </div>

        <div class="col-5">
            <h5>Not Urgent</h5>
        </div>

    </div>
    
    <div class="row">

        <div class="col-2">
            <h5>Important</h5>
        </div>

        <div class="col-5 border">
            
            <table class="table table-bordered table-striped border-primary table-sm">

                @*Table header and columns*@
                <thead class="font-weight-bold table-dark">
                    <tr>
                        <td>Task</td>
                        <td>Update</td>
                        <td>Delete</td>
                        <td>Mark Complete</td>
                    </tr>
                </thead>

                @*Table body*@
                <tbody>
                    @foreach (var task in Model)
                    {
                        if (task.Quadrant == 1)
                        {
                            <tr>
                                <td>@task.Task</td>
                                <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@task.TaskID">Update</a></td>
                                <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-taskid="@task.TaskID">Delete</a></td>
                                <td><a asp-controller="Home" asp-action="MarkComplete" asp-route-taskid="@task.TaskID">Mark completed</a></td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

        </div>

